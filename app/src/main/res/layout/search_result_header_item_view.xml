<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_product_container"
    style="@style/Widget.Material3.CardView.Outlined"
    android:layout_width="@dimen/_240sdp"
    android:layout_height="@dimen/_80sdp"
    android:layout_marginHorizontal="@dimen/space_small"
    android:stateListAnimator="@animator/smooth_fading"
    app:cardElevation="@dimen/space_very_small"
    app:contentPadding="@dimen/space_medium"
    app:padding="@dimen/space_medium">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:weightSum="1.5">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/space_medium"
            tools:text="کیف لپ تاب مدل NU مناسب برای لپ تاب 15 اینچ" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/space_very_large"
            android:layout_height="@dimen/space_very_large"
            android:layout_weight="0.5"
            android:src="@drawable/amazing_suggestion" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>