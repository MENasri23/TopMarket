<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.MarketApp.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontFamily">@font/samim_bold_fd</item>
        <item name="android:fontFamily">@font/samim_bold_fd</item>
        <item name="lineSpacing">0sp</item>
    </style>

    <style name="TextAppearance.MarketApp.TitleMedium" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="fontFamily">@font/samim_bold_fd</item>
        <item name="android:fontFamily">@font/samim_bold_fd</item>
        <item name="lineSpacing">0sp</item>
    </style>

    <style name="TextAppearance.MarketApp.TitleSmall" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="fontFamily">@font/samim_bold_fd</item>
        <item name="android:fontFamily">@font/samim_bold_fd</item>
        <item name="lineSpacing">0sp</item>
    </style>

    <style name="TextAppearance.MarketApp.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/samim_fd</item>
        <item name="android:fontFamily">@font/samim_fd</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="TextAppearance.MarketApp.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/samim_fd</item>
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:lineSpacingExtra">@dimen/_1ssp</item>
    </style>

    <style name="TextAppearance.MarketApp.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="fontFamily">@font/samim_fd</item>
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>


    <style name="Widget.Market" parent="@android:style/Widget.Material" />

    <style name="Widget.Market.AppBar" parent="@style/Widget.Material3.AppBarLayout">
        <item name="elevation">@dimen/space_very_small</item>
        <item name="android:elevation">@dimen/space_very_small</item>
        <item name="background">@color/background_gray_dark</item>
    </style>

    <style name="Widget.Market.Button" parent="Widget.Material3.Button">
        <item name="fontFamily">@font/samim_fd</item>
        <item name="android:textAppearance">@style/TextAppearance.MarketApp.TitleMedium</item>
    </style>

    <style name="Widget.Market.SnackbarActionButton" parent="Widget.Material3.Button.TextButton">
        <item name="fontFamily">@font/samim_fd</item>
        <item name="android:textAppearance">@style/TextAppearance.MarketApp.BodySmall</item>
    </style>

    <style name="Widget.Market.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="fontFamily">@font/samim_fd</item>
        <item name="android:fontFamily">@font/samim_fd</item>
        <item name="itemTextAppearance">@style/TextAppearance.MarketApp.BodySmall</item>
    </style>

    <!-- Settings -->
    <style name="Widget.Market.Settings" />

    <style name="Widget.IOSched.Settings.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:background">@null</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="fontFamily">@font/samim_fd</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="switchTextAppearance">@style/TextAppearance.MarketApp.BodySmall</item>
    </style>

    <style name="Widget.Market.Settings.CheckBox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="android:textAppearance">@style/TextAppearance.MarketApp.LabelSmall</item>
        <item name="android:background">@null</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textAlignment">viewStart</item>
    </style>


    <style name="Widget.Market.Settings.OutlinedBox.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:paddingTop">@dimen/space_very_small</item>
        <item name="android:paddingBottom">@dimen/space_very_small</item>
        <item name="materialThemeOverlay">
            @style/Widget.Market.Settings.OutlinedBox.ExposedDropdownMenu.themeOverlay
        </item>

    </style>

    <style name="Widget.Market.Settings.OutlinedBox.ExposedDropdownMenu.themeOverlay" parent="@style/ThemeOverlay.MaterialComponents.AutoCompleteTextView.OutlinedBox">
        <item name="fontFamily">@font/samim_fd</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="maxLines">1</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
    </style>


    <!-- SignIn -->
    <style name="Widget.Market.SignIn" parent="" />

    <style name="Widget.Market.SignIn.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomStart">@dimen/space_very_small</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/space_very_small</item>
        <item name="boxCornerRadiusTopStart">@dimen/space_very_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/space_very_small</item>
    </style>

    <style name="Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>