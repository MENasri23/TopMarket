<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TopMarket" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/digi_red_color_700</item>
        <item name="colorPrimaryVariant">@color/digi_red_color_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_sky</item>
        <item name="colorSecondaryVariant">@color/blue_sky700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Accent brand color -->
        <item name="colorAccent">@color/digi_blue_200</item>
        <!-- Other colors -->
        <item name="colorSecondaryContainer">@color/digi_red_color_100</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/use_light_status</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="elevationOverlayEnabled">false</item>

        <item name="itemBackgroundColor">@color/background_gray_light</item>
        <item name="indicatorBackgroundColor">@color/background_gray_dark</item>

        <!-- Widget style -->
        <item name="bottomNavigationStyle">@style/Widget.Market.BottomNavigationView</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/slider_image_corner_size</item>
    </style>


</resources>